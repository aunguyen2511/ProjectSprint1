@model AgileCommercee.Data.Loai

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adding New Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form1" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label"></label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <input type="file" name="FileLogo" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    label.error {
        color: red;
    }

    input.error {
        background: yellow;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script>

        //step 2: đăng ký thuộc tính kiểm tra

        $(document).ready(function () {
            $("#form1").validate({
                rules: {
                    TenLoai: { required: true },
                    Hinh: { extension: "png|jpg|gif|jpeg|bmp" },
                    TenLoaiAlias: { required: true },
                    MoTa: { required: true }
                },
                messages: {
                    TenLoai: { required: "*" },
                    TenLoaiAlias: { required: "*" },
                    Hinh: { extension: "Chỉ được chọn file hình png|jpg|gif|jpeg|bmp" },
                    MoTa: { required: "*" }
                }
            });
        });
    </script>
}
