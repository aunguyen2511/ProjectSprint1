@model IEnumerable<AgileCommercee.Data.HangHoa>

@{
    ViewData["Tittle"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Ministore - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="stylesheet" type="text/css" href="~/MiniStore-1.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/MiniStore-1.0.0/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<body>
    <h1>Index</h1>

    <p>
        <a button type="submit" class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <p>
        <a button type="submit" class="btn btn-primary" href="/Loais">Loại</a>
        <a buttin type="submit" class="btn btn-primary" href="/NhaCungCaps">Nhà cung cấp</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenHh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaLoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTaDonVi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgaySx)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiamGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLanXem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaNcc)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenHh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaLoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaDonVi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        <img width="100px" height="100px" src="~/images/Hinh/@item.Hinh" alt="@item.TenHh" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySx)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiamGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLanXem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNcc)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaHh">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaHh">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaHh">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <div>
            <a button type="submit" class="btn btn-primary" href="/Accounts/AfterLogin">Back to List</a>
        </div>
    </table>
    <footer id="footer" class="overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="footer-top-area">
                    <div class="row d-flex flex-wrap justify-content-between">
                        <div class="col-lg-3 col-sm-6 pb-3">
                            <div class="footer-menu">
                                <img width="300px" width="300px" src="~/images/BaboonStore.png" alt="logo">
                                <p>Baboon Store tư vấn theo cách của chúng tôi, chọn lựa theo cách của bạn.</p>
                                <div class="social-links">
                                    <ul class="d-flex list-unstyled">
                                        <li>
                                            <a href="#">
                                                <svg class="facebook">
                                                    <use xlink:href="#facebook" />
                                                </svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <svg class="instagram">
                                                    <use xlink:href="#instagram" />
                                                </svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <svg class="twitter">
                                                    <use xlink:href="#twitter" />
                                                </svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <svg class="linkedin">
                                                    <use xlink:href="#linkedin" />
                                                </svg>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <svg class="youtube">
                                                    <use xlink:href="#youtube" />
                                                </svg>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-6 pb-3">
                            <div class="footer-menu text-uppercase">
                                <h5 class="widget-title pb-2">Quick Links</h5>
                                <ul class="menu-list list-unstyled text-uppercase">
                                    <li class="menu-item pb-2">
                                        <a href="#">Home</a>
                                    </li>
                                    <li class="menu-item pb-2">
                                        <a href="#">About</a>
                                    </li>
                                    <li class="menu-item pb-2">
